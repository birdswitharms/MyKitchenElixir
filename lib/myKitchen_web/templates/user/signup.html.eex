<h3>Signup</h3>

<%= form_for @changeset, user_path(@conn, :signup), fn f -> %>
  <div class="form-group">
    <%= text_input f, :name, placeholder: "name", class: "form-control" %>
    <%= error_tag f, :name %>
    <%= text_input f, :email, placeholder: ":email", class: "form-control" %>
    <%= error_tag f, :email %>
  </div>
  <%= submit "Signup", class: "btn btn-primary" %>
<% end %>
